<mvc:View
	controllerName="org.ubb.books.controller.BookList"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">

	 <Table id="idBooksTable"
		items="{
			path: '/Books',
			sorter: {
				path: 'Title'
			}
		}"
		growing="true"
		growingThreshold="10"
		mode="SingleSelectLeft">
		<headerToolbar>
            <Toolbar>
                <content>
                    <Button
                        id="addDialogButton"
                        text="Add/Update"
                        press="onBookDialogOpen"/>
                    <Button
                        text="Delete"
                        press="onDeleteBook"/>
					<Button
                        text="See Borrowed Books"
                        press="onBorrowedDialogOpen"/>
                </content>
            </Toolbar>
        </headerToolbar>
    
        <columns>
            <Column>
                <Text text="Title" />
            </Column>
            <Column>
                <Text text="Author" />
            </Column>
            <Column>
                <Text text="Published on" />
            </Column>
            <Column>
                <Text text="Language" />
            </Column>
         <Column>
                <Text text="Available books" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier
                        title="{Title}"
                        text="{ISBN}"/>
                    <Text text="{Author}" />
                    <Text text="{ 
                            path: 'PublishDate',
                            type: 'sap.ui.model.type.Date'
                        }" 
                    />
                    <Text text="{Language}" />
                    <Text text="{= parseInt(${NbAvailableBooks}) }" />
                </cells>
            </ColumnListItem>
        </items>

	</Table>
</mvc:View>

